[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  cian = commit --amend --no-edit
  l1 = 'log --oneline -1'
[pull]
  ff = only
  rebase = true
[core]
  pager = diff-so-fancy | less --tabs=4 -RFXS
[diff]
  compactionHeuristic = true
  algorithm = histogram
  renames = true
[color "diff-highlight"]
  oldNormal = red
  oldHighlight = red bold 88
  newNormal = green
  newHighlight = green bold 58
[color "diff"]
  old = red
  new = green
  whitespace = red reverse
  meta = 3
  frag = 4
  func = 0
  commit = yellow bold
[diff-so-fancy]
  stripLeadingSymbols = true
  rulerWidth = 80
  markEmptyLines = false
[color]
  ui = true
[interactive]
  diffFilter = diff-so-fancy --patch
[mergetool]
  keepBackup = false
[push]
  autoSetupRemote = true
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  layout = LOCAL,BASE,REMOTE/MERGED
