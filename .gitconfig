[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
[pull]
  ff = only
  rebase = true
[core]
  pager = diff-so-fancy | less --tabs=4 -RFXS --pattern '^(Date|added|deleted|modified): '
[diff]
  compactionHeuristic = true
  algorithm = histogram
  renames = true
[color "diff-highlight"]
  oldNormal = red
  oldHighlight = red bold 88
  newNormal = green
  newHighlight = green bold 58
[color "diff"]
  old = red
  new = green
  whitespace = red reverse
  meta = 3
  frag = 4
  func = 0
  commit = yellow bold
[diff-so-fancy]
  stripLeadingSymbols = true
  rulerWidth = 80
  markEmptyLines = false
[color]
  ui = true
[interactive]
  diffFilter = diff-so-fancy --patch
